<% if user_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <% if current_user.provider %>
        <%= image_tag current_user.picture, class: "img img-circle" %>
      <% end %>
      <%= current_user.email %>
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
    </ul>
  </li>
<% else %>
  <%= link_to 'Inscrivez vous', new_user_registration_path %>
  <%= link_to 'Identifiez vous', new_user_session_path %>
  <%= link_to "Facebook login", user_omniauth_authorize_path(:facebook) %>
<% end %>


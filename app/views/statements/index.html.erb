<h1>Impulsions reçues</h1>

<div id="chart_div"></div>

<table>
  <thead>
    <tr>
      <th>Heure de la mesure</th>
      <th>Pulse</th>
      <th>Power</th>
      <th>Numéro interne de l'électroscope</th>
    </tr>
  </thead>

  <tbody>
    <% @statements.each do |statement| %>
      <tr>
        <td><%= statement.time_of_measure %></td>
        <td><%= statement.pulse %></td>
        <td><%= statement.power %></td>
        <td><%= statement.box_session.box.internal_ref %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!--Load the AJAX API-->
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript">

  // Load the Visualization API and the piechart package.
  google.load("visualization", "1", {packages: ["corechart"]});

  // Set a callback to run when the Google Visualization API is loaded.
  google.setOnLoadCallback(drawChart);

  // Callback that creates and populates a data table,
  // instantiates the pie chart, passes in the data and
  // draws it.
  function drawChart() {

    // Create the data table.
    var points_json = <%= raw @points.to_json %>;
    var test_json = {
"cols":[
    {"type":"date"},{"type":"number"}
    ],
"rows":[
    {"c": [{ "v": "20-01-13"},{"v":35} ]},
    {"c": [{ "v": "21-01-13"},{"v":30} ]}
    ]
};
    console.log(points_json);
    console.log(test_json);
    var data = new google.visualization.DataTable(points_json);

    // Set chart options
    var options = {'title':'Power',
                   'width':400,
                   'height':300};

    // Instantiate and draw our chart, passing in some options.
    var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
    chart.draw(data, options);
  }
</script>

